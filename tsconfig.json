{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["node", "vitest"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/**/src",
    "packages/**/tests",
    "packages/**/bin",
    "packages/**/scripts",
    "vitest.config.ts",
    "eslint.config.js"
  ]
}
