{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["node", "vitest"],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["bin"]
}
