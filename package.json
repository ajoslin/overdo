{
  "name": "overdo",
  "version": "0.1.0",
  "private": false,
  "description": "Overdo orchestration platform bootstrap",
  "type": "module",
  "bin": {
    "overdo": "./scripts/overdo.mjs"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "unit": "vitest run tests/unit",
    "integration": "vitest run tests/integration",
    "e2e": "vitest run tests/e2e",
    "e2e:process": "RUN_OPENCODE_PROCESS_E2E=1 vitest run --maxWorkers=1 tests/e2e/process",
    "e2e:process:chaos": "node scripts/e2e-process-chaos.mjs",
    "overdo:install:opencode": "node scripts/install-opencode.mjs",
    "test": "vitest run"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.1",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.5"
  }
}
