{
  "name": "overdo-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Overdo monorepo workspace",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "bun run --cwd packages/overdo-core build && bun run --cwd packages/overdo-cli build && bun run --cwd packages/overdo-mcp build && bun run --cwd packages/overdo-plugin build",
    "lint": "bunx eslint .",
    "unit": "bun run --cwd packages/overdo-core unit",
    "integration": "bun run --cwd packages/overdo-core integration",
    "e2e": "bun run --cwd packages/overdo-core e2e",
    "e2e:process": "bun run --cwd packages/overdo-cli e2e:process",
    "e2e:process:chaos": "bun run --cwd packages/overdo-cli e2e:process:chaos",
    "overdo:install:opencode": "bun run --cwd packages/overdo-cli overdo:install:opencode",
    "test": "bun run --cwd packages/overdo-core test && bun run --cwd packages/overdo-cli test && bun run --cwd packages/overdo-plugin test"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.1",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "vitest": "^3.0.5"
  }
}
